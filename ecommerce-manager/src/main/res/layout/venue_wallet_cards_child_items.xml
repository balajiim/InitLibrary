<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="@color/venue_wallet_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.venue.venuewallet.utils.FontTextView
            android:id="@+id/walletnocard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/venue_wallet_nocards"
            android:textColor="@color/venue_wallet_text_list_color"
            android:textSize="14sp"
            android:visibility="gone"
            app:fonttypeface="@string/listtext" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/blance_textView"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/edit_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/venue_wallet_edit"
                android:visibility="visible" />

            <com.venue.venuewallet.utils.FontTextView
                android:id="@+id/title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/edit_imageView"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/venue_wallet_text_list_color"
                android:textSize="20sp"
                app:fonttypeface="@string/listtext" />
        </LinearLayout>

        <com.venue.venuewallet.utils.FontTextView
            android:id="@+id/blance_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:textColor="@color/venue_wallet_text_list_color"
            android:textSize="20sp"
            app:fonttypeface="@string/listtext" />


        <ImageView
            android:id="@+id/master_imageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:visibility="visible" />

        <com.venue.venuewallet.utils.FontTextView
            android:id="@+id/master_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/venue_wallet_text_list_color"
            android:textSize="18sp"
            android:visibility="gone"
            app:fonttypeface="@string/listtext" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/venu_wallet_tab_divider" />

</RelativeLayout>
